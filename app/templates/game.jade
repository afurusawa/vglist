doctype html
html
    head
        meta(charset='utf-8')
        meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
        meta(name='viewport', content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no')
        title Test
        meta(name='description', content='')
        link(rel='stylesheet', type='text/css', href='/css/app.min.css')
        link(rel='stylesheet', type='text/css', href='//fonts.googleapis.com/css?family=Roboto:500,400,300')
        link(rel='stylesheet', type='text/css', href='//maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css')
        //link(rel='stylesheet', type='text/css', href='/css/hover-min.css')

    body
        a(href="/") HOME
        span &nbsp;|&nbsp;
        a(href="/submit-game") SUBMIT GAME
        span &nbsp;|&nbsp;
        a(href="/about") ABOUT
        span &nbsp;|&nbsp;
        a(href="/browse-games") GAMES
        span &nbsp;|&nbsp;

        if !user
            a(href='/signup') local signup
            .login
                h1 login
                form(action='/login', method='post')
                    input(type='text', name='email', placeholder='email')
                    input(type='password', name='password', placeholder='password')
                    input(type="submit", value='login')
                h1 login using facebook
                a(href="/auth/facebook") facebook
        else
            a(href="/profile")= user
            span &nbsp;|&nbsp;
            a(href="/logout") LOGOUT

        .game-content
            br
            h1 title: #{game.title} | #{game.platform}
            .rate
                button(ng-click="rateGame") Rate
            h3 #{game.released} | #{game.series}
            h3 developer(s): #{game.developer}
            h3 publisher(s): #{game.publisher}

            h2 #{game.metadata.userRating} | #{game.metadata.criticRating}




    body(ng-app="userSessionApp")

        p= "user is: " + user
        // top menu bar: create account and login
        // hook this up with facebook
        a(href="/submit") Submissions
        span &nbsp;|&nbsp;
        a(href="/about") ABOUT
        span &nbsp;|&nbsp;
        a(href="/games") GAMES
        span &nbsp;|&nbsp;

        - var user = user
        if !user
            a(href='/signup') local signup
            .login(ng-controller="userSessionController")
                h1 login
                form(action='/login', method='post')
                    input(type='text', name='email', placeholder='email')
                    input(type='password', name='password', placeholder='password')
                    input(type="submit", value='login')
                a(href="/auth/facebook") facebook
        else
            a(href="/profile")= user
            span &nbsp;|&nbsp;
            a(href="/logout") LOGOUT


        .fb-like(data-share="true", data-width="450", data-show-faces="true")





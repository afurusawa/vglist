doctype html
html

    head
        meta(charset='utf-8')
        meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
        meta(name='viewport', content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no')
        meta(name='description', content='A video game management website to track all your games!')
        link(rel='stylesheet', type='text/css', href='//cdnjs.cloudflare.com/ajax/libs/normalize/4.2.0/normalize.css')
        link(rel='stylesheet', type='text/css', href='//maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css')
        link(rel='stylesheet', type='text/css', href='/css/app.min.css')

        block title
            title Home

    body(ng-app='app')

        header.l-top(ng-controller='headerController')
            .top-bar
                .top-bar__logo
                    a(href="/")
                        i.fa.fa-dot-circle-o
                .top-bar__search-bar
                    .search-bar
                        .search-bar__field
                            input(type='text' ng-model='search' placeholder='search for game')

                .top-bar__account
                    if !user
                        .account__sign-up
                            .sign-up__icon
                                a(href='/signup')
                                    i.fa.fa-pencil-square-o
                                    span Sign Up
                        .account__login
                            .login__icon(ng-click='toggle()')
                                i.fa.fa-sign-in
                                span Login

                        .account__login--fb
                            a(href="/auth/facebook")
                                i.fa.fa-facebook
                                span via Facebook

                        .login__form(ng-show='login.state')
                            form(action='/login', method='post')
                                input(type='text', name='email', placeholder='email')
                                input(type='password', name='password', placeholder='password')
                                input(type="submit", value='login')
                    else
                        .account__user
                            if user.facebook
                                a(href="/profile")= user.facebook.name
                            else if user.local.username
                                a(href="/profile")= user.local.username

                        .account__logout
                            i.fa.fa-sign-out
                            a(href="/logout") Logout

            .search-bar__results
                .results(ng-show='search.length >= 3', ng-repeat = "game in results")
                    a(href='/game/{{game._id}}') {{game.title}} [id: {{game._id}}]
                        button(ng-click="addToList(game._id, game.title)", ng-disabled='isDisabled') add to list


        section.l-middle
            nav
                ul.menu
                    li.menu__item
                        a(href='/browse-games') NEWS
                    li.menu__item
                        a(href='/browse-games') TOP GAMES
                    li.menu__item
                        a(href='/browse-games') POPULAR
                hr

            .game(ng-controller="listController", ng-repeat="game in list")
                a(href='/game/{{game._id}}') {{game.title}} [id: {{game._id}}]
                    button(ng-click="addToList(game._id, game.title)", ng-disabled='isDisabled') {{button}}

                br
                br
                p {{ mylist }}
                p ???

        // Footer section
        footer.l-bottom
            .footer
                .footer__about
                    a(href="/about") ABOUT
                .footer__copyright
                    p &copy; 2016 Andrew Furusawa. All Rights Reserved.


        script(src='//ajax.googleapis.com/ajax/libs/angularjs/1.5.8/angular.js')
        script(src="//ajax.googleapis.com/ajax/libs/angularjs/1.5.8/angular-route.js")
        //script(src='//ajax.googleapis.com/ajax/libs/angularjs/1.5.8/angular.min.js')
        script(src='js/app.min.js')
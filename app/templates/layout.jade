doctype html
html

    head
        meta(charset='utf-8')
        meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
        meta(name='viewport', content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no')
        meta(name='description', content='A video game management website to track all your games!')
        link(rel='stylesheet', type='text/css', href='//cdnjs.cloudflare.com/ajax/libs/normalize/4.2.0/normalize.css')
        link(rel='stylesheet', type='text/css', href='//maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css')
        link(rel='stylesheet', type='text/css', href='/css/app.min.css')

        block title
            title NO TITLE

    body(ng-app='app')

        header.l-top
            .top-bar(ng-controller='headerController')
                .top-bar__logo
                    a(href="/") [logo] vgstats
                .top-bar__account
                    if !user
                        .account__sign-up
                            a(href='/signup') Sign Up
                        .account__login(ng-click='toggle()', ng-show='login.state')
                            form(action='/login', method='post')
                                input(type='text', name='email', placeholder='email')
                                input(type='password', name='password', placeholder='password')
                                input(type="submit", value='login')
                            a(href="/auth/facebook") facebook
                    else
                        a(href="/profile")= user
                        span &nbsp;|&nbsp;
                        a(href="/logout") LOGOUT

        section.l-middle
            .search-bar(ng-controller='searchController')
                .search-bar__field
                    input(type='text' ng-model='search' placeholder='search for game')
                .search-bar__results(ng-show='search.length >= 3', ng-repeat = "game in results")
                    a(href='/game/{{game._id}}') {{game.title}} [id: {{game._id}}]
                        button(ng-click="addToList(game._id, game.title)", ng-disabled='isDisabled') add to list

            nav
                ul.menu
                    li.menu__item
                        a(href='/browse-games') BROWSE GAMES

            block content
                h1 content

        // Footer section
        footer.l-bottom
            .footer
                .footer__about
                    a(href="/about") ABOUT
                .footer__copyright
                    p &copy; 2016 Andrew Furusawa. All Rights Reserved.


        script(src='//ajax.googleapis.com/ajax/libs/angularjs/1.5.8/angular.js')
        script(src="//ajax.googleapis.com/ajax/libs/angularjs/1.5.8/angular-route.js")
        //script(src='https://ajax.googleapis.com/ajax/libs/angularjs/1.5.6/angular.min.js')
        script(src='js/app.min.js')